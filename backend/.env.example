# Environment Configuration
NODE_ENV=development
PORT=5001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5000
ADMIN_DASHBOARD_URL=http://localhost:5002

# Database Configuration
# PostgreSQL (Primary Database)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=autocare_advisor
POSTGRES_USER=autocare_user
POSTGRES_PASSWORD=your_postgres_password

# MongoDB (Product Catalog & Analytics)
MONGODB_URI=mongodb://localhost:27017/autocare_advisor

# Redis (Caching & Sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Email Configuration (Brevo)
BREVO_API_KEY=your-brevo-api-key-here
BREVO_WEBHOOK_SECRET=your-brevo-webhook-secret
FROM_EMAIL=noreply@autocare-advisor.com
FROM_NAME=AutoCare Advisor
SYNC_BREVO_TEMPLATES=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# API Keys (placeholder values for development)
AWS_ACCESS_KEY_ID=development-placeholder
AWS_SECRET_ACCESS_KEY=development-placeholder
LINEAR_API_KEY=not-needed-with-mcp

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
