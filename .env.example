# Environment Configuration Template
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

# ========================================
# Application Configuration
# ========================================
NODE_ENV=development
PORT=3000
API_VERSION=v1

# ========================================
# Database Configuration
# ========================================

# PostgreSQL (User management, subscriptions)
DATABASE_URL=postgresql://autocare_user:password@localhost:5432/autocare_dev
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=autocare_dev
POSTGRES_USER=autocare_user
POSTGRES_PASSWORD=password

# MongoDB (Product catalog, recommendations)
MONGODB_URI=mongodb://localhost:27017/autocare_products_dev
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=autocare_products_dev

# Redis (Caching, sessions)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ========================================
# External Services
# ========================================

# AWS Configuration
AWS_REGION=eu-central-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_S3_BUCKET=autocare-advisor-assets-dev

# Stripe Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# SendGrid Email Service
SENDGRID_API_KEY=SG.your_sendgrid_api_key
FROM_EMAIL=noreply@autocare-advisor.com

# ========================================
# Authentication & Security
# ========================================
JWT_SECRET=your_very_long_random_jwt_secret_here
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# OAuth (if implemented)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ========================================
# AutoCare Advisor Specific
# ========================================

# Recommendation Engine Settings
MAX_RECOMMENDATIONS=20
RECOMMENDATION_CACHE_TTL=3600
MIN_PRODUCT_RATING=3.0
ENABLE_SEASONAL_ADJUSTMENTS=true

# Partner Configuration
DEFAULT_PARTNER_TIER=basic
MAX_PRODUCTS_PER_PARTNER=1000
COMMISSION_RATES_BASIC=0.05
COMMISSION_RATES_PREMIUM=0.03
COMMISSION_RATES_ENTERPRISE=0.02

# Performance Settings
DB_CONNECTION_POOL_SIZE=10
REDIS_CONNECTION_POOL_SIZE=5
RECOMMENDATION_TIMEOUT_MS=100

# ========================================
# Development & Debugging
# ========================================

# Debug Configuration
DEBUG=autocare:*,recommendation:*,db:*
LOG_LEVEL=debug

# Development URLs
FRONTEND_URL=http://localhost:3001
BACKEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3002

# Test Database (separate from dev)
TEST_DATABASE_URL=postgresql://autocare_user:password@localhost:5432/autocare_test
TEST_MONGODB_URI=mongodb://localhost:27017/autocare_products_test

# ========================================
# Linear Integration
# ========================================
LINEAR_API_KEY=your_linear_api_key_here
LINEAR_TEAM_ID=your_team_id_here
LINEAR_PROJECT_ID=6fa9d986-c3cf-4e35-97ba-97b29e999c53

# ========================================
# Monitoring & Analytics
# ========================================

# ClickHouse (Analytics)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=autocare_analytics

# Application Monitoring
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# ========================================
# Docker Configuration (if using Docker)
# ========================================
COMPOSE_PROJECT_NAME=autocare-advisor
DOCKER_REGISTRY=your_docker_registry
DOCKER_TAG=latest

# ========================================
# Production Overrides (for .env.production)
# ========================================
# NODE_ENV=production
# DATABASE_URL=your_production_postgres_url
# MONGODB_URI=your_production_mongodb_uri
# REDIS_URL=your_production_redis_url
# FRONTEND_URL=https://app.autocare-advisor.com
# BACKEND_URL=https://api.autocare-advisor.com

# ========================================
# Feature Flags
# ========================================
ENABLE_PARTNER_ANALYTICS=true
ENABLE_MOBILE_APP_API=false
ENABLE_BULK_PRODUCT_IMPORT=true
ENABLE_A_B_TESTING=false
ENABLE_ADVANCED_FILTERING=true
